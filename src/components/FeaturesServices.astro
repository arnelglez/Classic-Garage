---
import { featuresServices } from "../const/service";
import FeatureServiceCard from "./ui/service/FeatureServiceCard.astro";
---

<section id="featured" class="py-16 sm:py-24 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Title and Subtitle -->
        <div class="text-center mb-12">
            <h2 class="text-3xl sm:text-4xl font-extrabold text-gray-900">
                Our <span class="text-indigo-600">Featured Services</span>
            </h2>
            <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
                Our most popular and high-impact services you shouldn't miss.
            </p>
        </div>

        <!-- Featured Services Grid -->
        <div class="mt-10 grid grid-cols-1 gap-10 md:grid-cols-2 lg:grid-cols-3">

            {
                featuresServices.map((service) => (
                    <FeatureServiceCard featureService={service} />
                ))
            }
        </div>

        <!-- CTA to view all services -->
        <div class="mt-16 text-center">
            <a href="#services" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-full shadow-sm text-indigo-600 bg-white hover:bg-indigo-50 transition duration-200">
                View Full Service Menu
                <svg class="ml-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>
    </div>
</section>