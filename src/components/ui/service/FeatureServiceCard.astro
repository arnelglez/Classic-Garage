---
import { type FeatureServiceCard } from '../../../interfaces/interfaces';

interface Props {
    featureService: FeatureServiceCard
}

const {featureService} = Astro.props
---


<div class="bg-white rounded-xl shadow-xl overflow-hidden group hover:shadow-2xl transition duration-300">
    <img src={featureService.imageUrl} alt={featureService.imageAlt} class="h-48 w-full object-cover transition duration-500 group-hover:scale-105">
    <div class="p-6">
        <span class:list={[
            "inline-flex items-center rounded-full px-3 py-0.5 text-sm font-medium ",
            {"bg-indigo-100 text-indigo-800": featureService.color === "indigo"},
            {"bg-pink-100 text-pink-800": featureService.color === "pink"},
            {"bg-green-100 text-green-800": featureService.color === "green"},
        ]}>{featureService.category}</span>
        <h3 class="mt-3 text-xl font-bold text-gray-900 leading-tight">{featureService.title}</h3>
        <p class="mt-2 text-gray-600 text-sm line-clamp-3">
            {featureService.description}
        </p>
        <div class="mt-4 flex justify-between items-center">
            <span class:list={[
                "text-2xl font-extrabold",
                {"text-indigo-600": featureService.color === "indigo"},
                {"text-pink-600": featureService.color === "pink"},
                {"text-green-600": featureService.color === "green"},
            ]}>{featureService.price}</span>
            <a href="#contact" class:list={[
                "rounded-full px-4 py-2 text-sm font-semibold text-white transition duration-200",
                {"bg-indigo-600 hover:bg-indigo-700": featureService.color === "indigo"},
                {"bg-pink-600 hover:bg-pink-700": featureService.color === "pink"},
                {"bg-green-600 hover:bg-green-700": featureService.color === "green"},
            ]}>
                Schedule Service
            </a>
        </div>
    </div>
</div>