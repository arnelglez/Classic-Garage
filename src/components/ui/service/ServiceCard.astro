---
import BatteryElectrical from '../../../icons/BatteryElectrical.astro';
import ChecklistMaintenance from '../../../icons/ChecklistMaintenance.astro';
import EngineGear from '../../../icons/EngineGear.astro';
import Wrench from '../../../icons/Wrench.astro';
import type { ServiceCard } from '../../../interfaces/interfaces';

interface Props {
    service: ServiceCard
}

const {service} = Astro.props

const iconClass = "w-6 h-6";

---

<a href={service.href} class="group block p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-1 border border-gray-100">
    <div class="flex flex-col items-center text-center">
        
        <div class:list={[
            "p-4 rounded-full mb-4 transition group-hover:text-white",
            {"bg-indigo-100 text-indigo-600 group-hover:bg-indigo-600": service.color === "indigo"},
            {"bg-pink-100 text-pink-600 group-hover:bg-pink-600": service.color === "pink"},
            {"bg-green-100 text-green-600 group-hover:bg-green-600": service.color === "green"},
            {"bg-yellow-100 text-yellow-600 group-hover:bg-yellow-600": service.color === "yellow"},
        ]}>
            {
                service.icon === "engine-gear" ? <EngineGear class={iconClass} /> :
                service.icon === "wrench" ? <Wrench class={iconClass} /> :
                service.icon === "battery-electrical" ? <BatteryElectrical class={iconClass} /> :
                service.icon === "checklist-maintenance" ? <ChecklistMaintenance class={iconClass} /> :
                null
            }
        </div>
        
        <h3 class:list={[
            "text-xl font-semibold text-gray-900  transition duration-300",
            {"group-hover:text-indigo-600": service.color === "indigo"},
            {"group-hover:text-pink-600": service.color === "pink"},
            {"group-hover:text-green-600": service.color === "green"},
            {"group-hover:text-yellow-600": service.color === "yellow"},
        ]}>{service.title}</h3>
        
        <p class="mt-2 text-sm text-gray-500">
            {service.description}
        </p>
    </div>
</a>